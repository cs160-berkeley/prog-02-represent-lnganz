<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/flag"
    android:gravity="center_horizontal">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:id="@+id/repOuterLayout"
        android:gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View 2012 Vote Results"
            android:id="@+id/voteButton"
            android:onClick="startWatchVoteActivity"
            android:layout_marginBottom="5dp"
            android:background="@drawable/textview_circular_design"
            android:textColor="#ffffff"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/locationText"
            android:layout_gravity="center_horizontal"
            android:typeface="normal"
            android:gravity="center"
            android:textSize="25dp"
            android:background="@drawable/rounded_corner"
            android:paddingRight="15dp"
            android:paddingLeft="15dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp" />

        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/twitter_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="@drawable/rounded_corner"
            android:id="@+id/repLayout1"
            android:gravity="center_horizontal">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:id="@+id/repImageButton1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

            <TextView
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/repText1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="10dp"
            android:id="@+id/repLayout2"
            android:gravity="center_horizontal">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:id="@+id/repImageButton2"

                android:scaleType="centerInside"
                android:adjustViewBounds="true" />
            <!--android:scaleType="fitCenter"-->
            <TextView
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/repText2" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:background="@drawable/rounded_corner"
            android:layout_marginTop="10dp"
            android:id="@+id/repLayout3"
            android:gravity="center_horizontal">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:id="@+id/repImageButton3"
                android:scaleType="centerInside"
                android:adjustViewBounds="true" />
            <!--android:scaleType="fitCenter"-->

            <TextView
                android:layout_width="231dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:id="@+id/repText3" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
